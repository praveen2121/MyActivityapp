<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#87b553"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="16dp"
    android:paddingTop="16dp">

<TextView
    android:id="@+id/det_activity"
    android:text="Detail Activity"
    android:textColor="#ffffff"
    android:layout_centerHorizontal="true"
    android:layout_alignParentTop="true"
    android:textSize="40sp"
    android:padding="30dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />

<Spinner
    android:drawSelectorOnTop="true"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#1da38c"
    android:id="@+id/SpinnerSelection"
    android:layout_centerInParent="true"
    android:padding="30dp"
    android:entries="@array/actions">

</Spinner>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:layout_alignParentBottom="true">





        <Button

            android:layout_weight="1"
            android:background="#b24261"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/ReturnSecondActivity"
            android:text="Return\nSelection"

            android:padding="40dp"




            />
        <Button

            android:layout_weight="1"
            android:background="#1faeff"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/performButton"
            android:text="Perform\nSelection"

            android:padding="40dp"




            />
    </LinearLayout>






</RelativeLayout>